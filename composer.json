{
  "name": "zeus-server/zeus-scheduler",
  "description": "A general scheduler for Zeus Server",
  "type": "library",
  "license": "LGPL-2.1-only",
  "authors": [
    {
      "name": "Artur Graniszewski",
      "email": "artur.graniszewski@gmail.com"
    }
  ],
  "support": {
    "email": "artur.graniszewski@gmail.com",
    "source": "https://github.com/artur-graniszewski/zeus-scheduler",
    "issues": "https://github.com/artur-graniszewski/zeus-scheduler/issues"
  },
  "homepage": "https://github.com/artur-graniszewski/zeus-scheduler",
  "keywords": [
    "scheduler"
  ],
  "require": {
    "php": "^7.0",
    "zendframework/zend-eventmanager": "^3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Zeus\\": "src/Zeus/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ZeusSchedulerTest\\": "test/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}